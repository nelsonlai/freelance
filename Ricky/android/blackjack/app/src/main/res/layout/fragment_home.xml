<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B5E20"
    tools:context=".ui.home.HomeFragment">

<ScrollView
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:fillViewport="true"
    android:layout_marginBottom="16dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/game_controls"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Dealer's Hand -->
    <LinearLayout
        android:id="@+id/dealer_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dealer's Hand"
            android:textColor="#BDBDBD"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dealer_card_1"
                android:layout_width="96dp"
                android:layout_height="134dp"
                android:layout_marginEnd="-20dp"
                android:visibility="invisible"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/dealer_card_2"
                android:layout_width="96dp"
                android:layout_height="134dp"
                android:layout_marginEnd="-20dp"
                android:visibility="invisible"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/dealer_card_3"
                android:layout_width="96dp"
                android:layout_height="134dp"
                android:layout_marginEnd="-20dp"
                android:visibility="invisible"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/dealer_card_4"
                android:layout_width="96dp"
                android:layout_height="134dp"
                android:layout_marginEnd="-20dp"
                android:visibility="invisible"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/dealer_card_5"
                android:layout_width="96dp"
                android:layout_height="134dp"
                android:layout_marginEnd="-20dp"
                android:visibility="invisible"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <TextView
            android:id="@+id/dealer_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Value: ?"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Player's Hand -->
    <LinearLayout
        android:id="@+id/player_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Hand"
            android:textColor="#BDBDBD"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/player_card_1"
                android:layout_width="96dp"
                android:layout_height="134dp"
                android:layout_marginEnd="-20dp"
                android:visibility="invisible"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/player_card_2"
                android:layout_width="96dp"
                android:layout_height="134dp"
                android:layout_marginEnd="-20dp"
                android:visibility="invisible"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/player_card_3"
                android:layout_width="96dp"
                android:layout_height="134dp"
                android:layout_marginEnd="-20dp"
                android:visibility="invisible"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/player_card_4"
                android:layout_width="96dp"
                android:layout_height="134dp"
                android:layout_marginEnd="-20dp"
                android:visibility="invisible"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/player_card_5"
                android:layout_width="96dp"
                android:layout_height="134dp"
                android:layout_marginEnd="-20dp"
                android:visibility="invisible"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <TextView
            android:id="@+id/player_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Value: 0"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Player's Split Hand -->
    <LinearLayout
        android:id="@+id/player_split_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Split Hand"
            android:textColor="#BDBDBD"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/player_split_card_1"
                android:layout_width="96dp"
                android:layout_height="134dp"
                android:layout_marginEnd="-20dp"
                android:visibility="invisible"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/player_split_card_2"
                android:layout_width="96dp"
                android:layout_height="134dp"
                android:layout_marginEnd="-20dp"
                android:visibility="invisible"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/player_split_card_3"
                android:layout_width="96dp"
                android:layout_height="134dp"
                android:layout_marginEnd="-20dp"
                android:visibility="invisible"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/player_split_card_4"
                android:layout_width="96dp"
                android:layout_height="134dp"
                android:layout_marginEnd="-20dp"
                android:visibility="invisible"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/player_split_card_5"
                android:layout_width="96dp"
                android:layout_height="134dp"
                android:layout_marginEnd="-20dp"
                android:visibility="invisible"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <TextView
            android:id="@+id/player_split_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Value: 0"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Game Info -->
    <LinearLayout
        android:id="@+id/game_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Bet"
                android:textColor="#BDBDBD"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/current_bet_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$100"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Winnings"
                android:textColor="#BDBDBD"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/winnings_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

        <!-- Bet Controls -->
        <LinearLayout
            android:id="@+id/bet_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/bet_minus_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_green_background"
                android:layout_marginEnd="8dp"
                android:elevation="0dp"
                android:stateListAnimator="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bet Amount:"
                android:textColor="#BDBDBD"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/bet_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$100"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/bet_plus_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_green_background"
                android:layout_marginStart="8dp"
                android:elevation="0dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

    <!-- Game Controls - Fixed at bottom -->
    <LinearLayout
        android:id="@+id/game_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#1B5E20"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/hit_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:background="@drawable/button_green_background"
                android:text="Hit"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="0dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/stand_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/button_green_background"
                android:text="Stand"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="0dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/split_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:background="@drawable/button_green_background"
                android:text="Split"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="0dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/double_down_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_green_background"
                android:text="Double Down"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="0dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/deal_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_dark_green_background"
                android:text="Deal"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="0dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

        <!-- Game Status Message -->
        <TextView
            android:id="@+id/game_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Choose Hit or Stand"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>